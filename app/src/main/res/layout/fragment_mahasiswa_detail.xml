<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.daberdev.learn.model.MahasiswaModel" />
    </data>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MahasiswaDetail">

        <TextView
            android:text="Info Mahasiswa"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:textStyle="bold"
            android:text="Nama : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.Nama}" />
        <TextView
            android:textStyle="bold"
            android:text="NIM : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.NIM}" />
        <TextView
            android:textStyle="bold"
            android:text="Jenis Kelamin : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.jenisKelamin}" />
        <TextView
            android:textStyle="bold"
            android:text="Jurusan / Prodi : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.JP}" />
        <TextView
            android:textStyle="bold"
            android:text="Tanggal Lahir : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.tanggalLahir}" />
        <TextView
            android:textStyle="bold"
            android:text="Tempat Lahir : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.tempatLahir}" />
        <TextView
            android:textStyle="bold"
            android:text="Tahun Masuk : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.tahunMasuk}" />

        <com.google.android.material.button.MaterialButton
            android:text="Kembali"
            app:cornerRadius="10dp"
            android:id="@+id/back"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
